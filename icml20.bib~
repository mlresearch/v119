@InProceedings{tong20a,
  title =      {{T}rajectory{N}et: A Dynamic Optimal Transport Network for Modeling Cellular Dynamics},
  author =     {Alexander Tong and Jessie Huang and Guy Wolf and Van Dijk, David and Smita Krishnaswamy},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {9526--9536},
  year =       {2020},
