@InProceedings{lioutas20a,
  title =      {Time-aware Large Kernel Convolutions},
  author =     {Vasileios Lioutas and Yuhong Guo},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {6172--6183},
  year =       {2020},
