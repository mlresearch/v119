@InProceedings{regol20a,
  title =      {Active Learning on Attributed Graphs via Graph Cognizant Logistic Regression and Preemptive Query Generation},
  author =     {Florence Regol and Soumyasundar Pal and Yingxue Zhang and Mark Coates},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {8041--8050},
  year =       {2020},
