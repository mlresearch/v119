@InProceedings{zhang20l,
  title =      {Privately Learning {M}arkov Random Fields},
  author =     {Huanyu Zhang and Gautam Kamath and Janardhan Kulkarni and Steven Wu},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {11129--11140},
