@InProceedings{dusenberry20a,
  title =      {Efficient and Scalable {B}ayesian Neural Nets with Rank-1 Factors},
  author =     {Michael Dusenberry and Ghassen Jerfel and Yeming Wen and Yian Ma and Jasper Snoek and Katherine Heller and Balaji Lakshminarayanan and Dustin Tran},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
