@InProceedings{zheng20b,
  title =      {What Can Learned Intrinsic Rewards Capture?},
  author =     {Zeyu Zheng and Junhyuk Oh and Matteo Hessel and Zhongwen Xu and Manuel Kroiss and Van Hasselt, Hado and David Silver and Satinder Singh},
