@InProceedings{brekelmans20a,
  title =      {All in the Exponential Family: {B}regman Duality in Thermodynamic Variational Inference},
  author =     {Rob Brekelmans and Vaden Masrani and Frank Wood and Greg Ver Steeg and Aram Galstyan},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {1111--1122},
