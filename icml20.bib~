@InProceedings{zhang201,
  title =      {Perceptual Generative Autoencoders},
  author =     {Zijun Zhang and Ruixiang Zhang and Zongpeng Li and Yoshua Bengio and Liam Paull},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {11298--11306},
