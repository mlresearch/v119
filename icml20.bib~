@InProceedings{zheng20c,
  title =      {Error-Bounded Correction of Noisy Labels},
  author =     {Songzhu Zheng and Pengxiang Wu and Aman Goswami and Mayank Goswami and Dimitris Metaxas and Chao Chen},
