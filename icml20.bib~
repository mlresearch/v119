@InProceedings{le20b,
  title =      {Self-Attentive Associative Memory},
  author =     {Hung Le and Truyen Tran and Svetha Venkatesh},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {5682--5691},
  year =       {2020},
