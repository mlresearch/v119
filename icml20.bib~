@InProceedings{luo20c,
  title =      {Adversarial Nonnegative Matrix Factorization},
  author =     {Lei Luo and Yanfu Zhang and Heng Huang},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {6479--6488},
