@InProceedings{turek20a,
  title =      {Approximating Stacked and Bidirectional Recurrent Architectures with the Delayed Recurrent Neural Network},
  author =     {Javier Turek and Shailee Jain and Vy Vo and Mihai Capot{\u{a}} and Alexander Huth and Theodore Willke},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {9648--9658},
  year =       {2020},
