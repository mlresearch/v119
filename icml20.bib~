@InProceedings{janati20a,
  title =      {Debiased {S}inkhorn barycenters},
  author =     {Hicham Janati and Marco Cuturi and Alexandre Gramfort},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
