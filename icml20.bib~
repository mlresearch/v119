@InProceedings{ghiassian20a,
  title =      {Gradient Temporal-Difference Learning with Regularized Corrections},
  author =     {Sina Ghiassian and Andrew Patterson and Shivam Garg and Dhawal Gupta and Adam White and Martha White},
