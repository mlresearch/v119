@InProceedings{zhen20a,
  title =      {Learning to Learn Kernels with Variational Random Features},
  author =     {Xiantong Zhen and Haoliang Sun and Yingjun Du and Jun Xu and Yilong Yin and Ling Shao and Cees Snoek},
