@InProceedings{pong20a,
  title =      {Skew-Fit: State-Covering Self-Supervised Reinforcement Learning},
  author =     {Vitchyr Pong and Murtaza Dalal and Steven Lin and Ashvin Nair and Shikhar Bahl and Sergey Levine},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {7783--7792},
  year =       {2020},
