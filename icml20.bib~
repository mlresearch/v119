@InProceedings{lu20a,
  title =      {Moniqua: Modulo Quantized Communication in Decentralized {SGD}},
  author =     {Yucheng Lu and De Sa, Christopher},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {6415--6425},
  year =       {2020},
