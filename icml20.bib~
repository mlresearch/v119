@InProceedings{swiatkowski20a,
  title =      {The k-tied Normal Distribution: A Compact Parameterization of {G}aussian Mean Field Posteriors in {B}ayesian Neural Networks},
  author =     {Jakub Swiatkowski and Kevin Roth and Bastiaan Veeling and Linh Tran and Joshua Dillon and Jasper Snoek and Stephan Mandt and Tim Salimans and Rodolphe Jenatton and Sebastian Nowozin},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
