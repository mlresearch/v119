@InProceedings{liu20c,
  title =      {Boosting Deep Neural Network Efficiency with Dual-Module Inference},
  author =     {Liu Liu and Lei Deng and Zhaodong Chen and Yuke Wang and Shuangchen Li and Jingwei Zhang and Yihua Yang and Zhenyu Gu and Yufei Ding and Yuan Xie},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
