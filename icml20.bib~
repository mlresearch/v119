@InProceedings{chang20c,
  title =      {Invariant Rationalization},
  author =     {Shiyu Chang and Yang Zhang and Mo Yu and Tommi Jaakkola},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {1448--1458},
  year =       {2020},
