@InProceedings{fahrbach20a,
  title =      {Faster Graph Embeddings via Coarsening},
  author =     {Matthew Fahrbach and Gramoz Goranci and Richard Peng and Sushant Sachdeva and Chi Wang},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {2953--2963},
