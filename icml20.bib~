@InProceedings{locatello20a,
  title =      {Weakly-Supervised Disentanglement Without Compromises},
  author =     {Francesco Locatello and Ben Poole and Gunnar Raetsch and Bernhard Sch{\"o}lkopf and Olivier Bachem and Michael Tschannen},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
