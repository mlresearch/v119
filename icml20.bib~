@InProceedings{kurtz20a,
  title =      {Inducing and Exploiting Activation Sparsity for Fast Inference on Deep Neural Networks},
  author =     {Mark Kurtz and Justin Kopinsky and Rati Gelashvili and Alexander Matveev and John Carr and Michael Goin and William Leiserson and Sage Moore and Nir Shavit and Dan Alistarh},
