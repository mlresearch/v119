@InProceedings{angermueller20a,
  title =      {Population-Based Black-Box Optimization for Biological Sequence Design},
  author =     {Christof Angermueller and David Belanger and Andreea Gane and Zelda Mariet and David Dohan and Kevin Murphy and Lucy Colwell and D Sculley},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
