@InProceedings{vernade20a,
  title =      {Linear bandits with Stochastic Delayed Feedback},
  author =     {Claire Vernade and Alexandra Carpentier and Tor Lattimore and Giovanni Zappella and Beyza Ermis and Michael Br{\"u}ckner},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
