@InProceedings{chen20b,
  title =      {Self-{PU}: Self Boosted and Calibrated Positive-Unlabeled Training},
  author =     {Xuxi Chen and Wuyang Chen and Tianlong Chen and Ye Yuan and Chen Gong and Kewei Chen and Zhangyang Wang},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
