@InProceedings{obukhov20a,
  title =      {T-Basis: a Compact Representation for Neural Networks},
  author =     {Anton Obukhov and Maxim Rakhuba and Stamatios Georgoulis and Menelaos Kanakis and Dengxin Dai and Van Gool, Luc},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
