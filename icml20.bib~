@InProceedings{kunin20a,
  title =      {Two Routes to Scalable Credit Assignment without Weight Symmetry},
  author =     {Daniel Kunin and Aran Nayebi and Javier Sagastuy-Brena and Surya Ganguli and Jonathan Bloom and Daniel Yamins},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {5511--5521},
