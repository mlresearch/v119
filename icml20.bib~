@InProceedings{wang20w,
  title =      {Cost-effectively Identifying Causal Effects When Only Response Variable is Observable},
  author =     {Tian-Zuo Wang and Xi-Zhu Wu and Sheng-Jun Huang and Zhi-Hua Zhou},
