@InProceedings{woodworth20a,
  title =      {Is Local {SGD} Better than Minibatch {SGD}?},
  author =     {Blake Woodworth and Kumar Kshitij Patel and Sebastian Stich and Zhen Dai and Brian Bullins and Brendan Mcmahan and Ohad Shamir and Nathan Srebro},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
