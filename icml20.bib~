@InProceedings{bhattacharyya20a,
  title =      {Learning and Sampling of Atomic Interventions from Observations},
  author =     {Arnab Bhattacharyya and Sutanu Gayen and Saravanan Kandasamy and Ashwin Maran and Vinodchandran N. Variyam},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
