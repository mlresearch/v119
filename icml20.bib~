@InProceedings{freeman20a,
  title =      {No-Regret and Incentive-Compatible Online Learning},
  author =     {Rupert Freeman and David Pennock and Chara Podimata and Jennifer Wortman Vaughan},
  booktitle =  {Proceedings of the 37th International Conference on Machine Learning},
  pages =      {3270--3279},
  year =       {2020},
